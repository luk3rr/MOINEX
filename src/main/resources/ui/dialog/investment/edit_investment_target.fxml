<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minWidth="600.0" prefWidth="600.0" spacing="15.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.moinex.ui.dialog.investment.EditInvestmentTargetController">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
    <children>
        <!-- Title -->
        <Label style="-fx-font-weight: bold;" text="%investment.label.investmentTargets">
            <font><Font size="14.0" /></font>
        </Label>
        
        <!-- Information Label -->
        <Label text="%investment.label.targetPercentageInfo" wrapText="true">
            <font><Font size="10.0" /></font>
        </Label>

        <!-- Investment Targets List -->
        <ScrollPane fitToWidth="true" minHeight="300.0" prefHeight="300.0" VBox.vgrow="ALWAYS">
            <content>
                <VBox fx:id="targetsContainer" spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>

        <!-- Total Percentage Label -->
        <HBox alignment="CENTER" spacing="5.0">
            <children>
                <Label text="%investment.label.totalPercentage" />
                <Label fx:id="totalPercentageLabel" style="-fx-font-weight: bold;" text="0.00%" />
            </children>
        </HBox>

        <!-- Validation Message -->
        <Label fx:id="validationLabel" style="-fx-text-fill: red;" visible="false" wrapText="true">
            <font><Font size="10.0" /></font>
        </Label>

        <!-- Action Buttons -->
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <JFXButton minWidth="80.0" onAction="#handleCancel" stylesheets="@../../../css/component/buttons.css" text="%dialog.button.cancel" />
                <JFXButton minWidth="80.0" onAction="#handleSave" stylesheets="@../../../css/component/buttons.css" text="%dialog.button.save" />
            </children>
            <padding>
                <Insets top="10.0" />
            </padding>
        </HBox>
    </children>
</VBox>
