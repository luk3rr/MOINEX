<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.moinex.ui.dialog.investment.BondInterestHistoryController">
    <children>
        <VBox spacing="10.0">
            <children>
                <HBox spacing="20.0">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="%bond.interestHistory.label.title">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font></Label>
                                <Label fx:id="bondNameLabel" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="%bond.interestHistory.label.type">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font></Label>
                                <Label fx:id="bondTypeLabel" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="%bond.interestHistory.label.indexation">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font></Label>
                                <Label fx:id="bondInterestTypeLabel" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
        <AnchorPane>
            <children>
                <TableView fx:id="historyTable" minWidth="1200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </AnchorPane>
        <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
            <children>
                <JFXButton fx:id="editButton" minWidth="110.0" onAction="#handleEditInterest" stylesheets="@../../../css/component/buttons.css" text="%bond.interestHistory.button.editInterest" />
                <JFXButton fx:id="resetButton" minWidth="110.0" onAction="#handleResetToAutomatic" stylesheets="@../../../css/component/buttons.css" text="%bond.interestHistory.button.resetToAutomatic" />
                <JFXButton fx:id="closeButton" minWidth="110.0" onAction="#handleClose" stylesheets="@../../../css/component/buttons.css" text="%bond.interestHistory.button.close" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
