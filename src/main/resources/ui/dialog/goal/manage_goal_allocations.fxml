<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="700.0" spacing="15.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.moinex.ui.dialog.goal.ManageGoalAllocationsController">
   <children>
      <!-- Header -->
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../icon/common/chart.png" />
               </image>
            </ImageView>
            <Label text="%goal.label.manageAllocations">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </children>
      </HBox>
      
      <!-- Goal Info -->
      <VBox spacing="5.0" style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-background-radius: 5;">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Label text="%goal.label.goal" />
                  <Label fx:id="goalNameLabel" text="Goal Name">
                     <font>
                        <Font name="System Bold" size="11.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label text="%goal.label.totalAllocatedValue" />
                  <Label fx:id="totalValueLabel" text="\$0.00">
                     <font>
                        <Font name="System Bold" size="11.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label text="%goal.label.targetBalance" />
                  <Label fx:id="targetBalanceLabel" text="\$0.00">
                     <font>
                        <Font name="System Bold" size="11.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
      
      <!-- Allocations Table -->
      <TableView fx:id="allocationsTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="assetTypeColumn" prefWidth="80.0" text="%goal.label.assetType" />
            <TableColumn fx:id="assetNameColumn" prefWidth="150.0" text="%goal.label.assetName" />
            <TableColumn fx:id="allocationTypeColumn" prefWidth="100.0" text="%goal.label.allocationType" />
            <TableColumn fx:id="allocationValueColumn" prefWidth="100.0" text="%goal.label.allocationValue" />
            <TableColumn fx:id="currentValueColumn" prefWidth="120.0" text="%goal.label.currentValue" />
         </columns>
      </TableView>
      
      <!-- Selected Allocation Actions -->
      <HBox fx:id="selectedAllocationActionsPane" alignment="CENTER" spacing="10.0" visible="false" managed="false">
         <children>
            <Label text="%goal.label.selectedAllocation" />
            <JFXButton minWidth="80.0" onAction="#handleEditAllocation" stylesheets="@../../../css/component/buttons.css" text="%dialog.button.edit" />
            <JFXButton minWidth="80.0" onAction="#handleDeleteAllocation" stylesheets="@../../../css/component/buttons.css" text="%dialog.button.delete" />
         </children>
      </HBox>
      
      <!-- Action Buttons -->
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <JFXButton fx:id="addAllocationButton" minWidth="120.0" onAction="#handleAddAllocation" stylesheets="@../../../css/component/buttons.css" text="%goal.button.addAllocation">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../icon/common/plus.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton minWidth="80.0" onAction="#handleRefresh" stylesheets="@../../../css/component/buttons.css" text="%dialog.button.refresh">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../icon/common/refresh.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton minWidth="80.0" onAction="#handleClose" stylesheets="@../../../css/component/buttons.css" text="%dialog.button.close" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</VBox>
