<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mymoney.ui.AddWalletController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Wallet name" />
    <TextField fx:id="walletNameField" promptText="Wallet name" />

    <Label text="Initial balance" />
    <TextField fx:id="walletBalanceField" promptText="Initial balance" />
   <Label text="Wallet type" />
   <ComboBox fx:id="walletTypeComboBox" prefWidth="150.0" promptText="Wallet type" />

    <Button onAction="#handleSave" text="Salvar" />
</VBox>
